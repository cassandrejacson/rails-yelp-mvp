<div class="banner" style="background-image: linear-gradient(-225deg, rgba(0,101,168,0.6) 0%, rgba(0,36,61,0.6) 50%), url(<%=image_url('restaurant_banner.jpg')%>);">
  <div class="banner-content">
    <h1>Welcome to Yelp Restaurants!</h1>
  </div>
</div>
<ul>
  <% @restaurants.each do |restaurant|  %>
  <li>
    <%= link_to restaurant.name, restaurant_path(restaurant)%> -
    <%= restaurant.category.capitalize %> -
    <%= link_to edit_restaurant_path(restaurant.id) do %>
    <i class="fas fa-edit"></i>
    <% end %> -
    <%= link_to restaurant_path(restaurant.id), method: :delete, data: { confirm: "Sure?" } do  %>
    <i class="fas fa-trash-alt"></i>
    <% end %>
  </li>
  <% end %>
</ul>
<p><%= link_to "Add a restaurant", new_restaurant_path %></p>



